
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Responsive Bootstrap 5 Admin &amp; Dashboard Template">
    <meta name="author" content="Bootlab">

    <title>Şifre Sıfırla</title>

    <link rel="canonical" href="https://appstack.bootlab.io/pages-reset-password.html" />
    <link rel="shortcut icon" href="img/favicon.ico">

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500&amp;display=swap" rel="stylesheet">

    <link class="js-stylesheet" href="~/Template/SafetyPanelTemplate/appstack-bs5.bootlab.io/css/light.css" rel="stylesheet">
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/sweetalert2@10.10.1/dist/sweetalert2.min.css'>
    <style>
        body {
            background-color: #CC0404;
            overflow-y: hidden;
        }
        .h2, .lead{
            color:white;
        }
    </style>
</head>


<body data-theme="default" data-layout="fluid" data-sidebar-position="left" data-sidebar-behavior="sticky">
    <div class="main d-flex justify-content-center w-100">
        <main class="content d-flex p-0">
            <div class="container d-flex flex-column">
                <div class="row h-100">
                    <div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
                        <div class="d-table-cell align-middle">

                            <div class="text-center mt-4">
                                <h1 class="h2">Şifrenizi Sıfırlayın</h1>
                                <p class="lead">
                                    Şifrenizi Sıfırlamak İçin Email Adresinizi Girin
                                </p>
                            </div>

                            <div class="card">
                                <div class="card-body">
                                    <div class="m-sm-4">
                                        <form>
                                            <div class="mb-3">
                                                <input class="form-control form-control-lg" type="email" name="EmailResetPassword" id="EmailResetPassword" placeholder="Email Adresinizi Giriniz" autocomplete="off" />
                                            </div>
                                            <div class="text-center mt-3">
                                                <button type="button" class="btn btn-lg btn-primary" onclick="ResetPasswordSendEmail()">Şifreyi Sıfırla</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script src="~/Template/SafetyPanelTemplate/appstack-bs5.bootlab.io/js/app.js"></script>
    <script src="~/Scripts/SafetyScript/page_import_script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10.10.1/dist/sweetalert2.all.min.js"></script>

</body>

</html>