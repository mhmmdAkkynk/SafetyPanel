
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Responsive Bootstrap 5 Admin &amp; Dashboard Template">
    <meta name="author" content="Bootlab">

    <title>Yeni Hesap Oluştur</title>

    <link rel="canonical" href="https://appstack.bootlab.io/pages-sign-up.html" />
    <link rel="shortcut icon" href="~/Template/SafetyPanelTemplate/appstack-bs5.bootlab.io/img/favicon.ico">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500&amp;display=swap" rel="stylesheet">
    <link class="js-stylesheet" href="~/Template/SafetyPanelTemplate/appstack-bs5.bootlab.io/css/light.css" rel="stylesheet">
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/sweetalert2@10.10.1/dist/sweetalert2.min.css'>
</head>

<body data-theme="default" data-layout="fluid" data-sidebar-position="left" data-sidebar-behavior="sticky">
    <div class="main d-flex justify-content-center w-100">
        <main class="content d-flex p-0">
            <div class="container d-flex flex-column">
                <div class="row h-100">
                    <div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
                        <div class="d-table-cell align-middle">

                            <div class="text-center mt-4">
                                <h1 class="h2">Hesap Oluştur</h1>
                                <p class="lead">
                                    Lüften aşağıdaki alanları eksiksiz doldurunuz.
                                </p>
                            </div>

                            <div class="card">
                                <div class="card-body">
                                    <div class="m-sm-4">
                                        <form>

                                            <div class="mb-3">
                                                <label class="form-label">Ad Soyad</label>
                                                <input class="form-control form-control-lg" type="text" name="FullName" id="FullName" placeholder="Ad Soyad" autocomplete="off" />
                                            </div>

                                            <div class="mb-3">
                                                <label class="form-label">Email</label>
                                                <input class="form-control form-control-lg" type="email" name="Email" id="Email" placeholder="Email Adresi"  autocomplete="off"/>
                                            </div>

                                            <div class="mb-3">
                                                <label class="form-label">Şifre</label>
                                                <div class="input-group">
                                                    <input type="password" class="form-control form-control-lg" name="Password" id="Password" placeholder="Şifrenizi Giriniz" maxlength="16">
                                                    <div class="input-group-lg">
                                                        <button class="btn btn-outline-primary" type="button" onclick="showPassword('Password')">
                                                            <i class="fa fa-eye"></i>
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="mb-3">
                                                <label class="form-label">Şifre Tekrar</label>
                                                <div class="input-group">
                                                    <input type="password" class="form-control form-control-lg" name="Password_Repeat" id="Password_Repeat" placeholder="Şifrenizi Tekrar Giriniz" maxlength="16">
                                                    <div class="input-group-lg">
                                                        <button class="btn btn-outline-primary" type="button" onclick="showPassword('Password_Repeat')">
                                                            <i class="fa fa-eye"></i>
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="text-center mt-3">
                                                <a class="btn btn-lg btn-primary" onclick="passwordControl()">Hesap Oluştur</a>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <script src="~/Template/SafetyPanelTemplate/appstack-bs5.bootlab.io/js/app.js"></script>
    <script src="~/Scripts/SafetyScript/page_import_script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10.10.1/dist/sweetalert2.all.min.js"></script>

</body>
</html>


